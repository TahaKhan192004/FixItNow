@{
    Layout = "_Layout1";
}
@model Messages
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Message</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #bfd7ef;
        }

        .message-container {
            margin-top: 50px;
            background-color: #bfd7ef;
        }

        .message-content {
            padding: 20px;
            border: 1px solid #040505;
            border-radius: 5px;
            background-color: white;
        }

        h2, h4 {
            color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container message-container">
        <h2 class="text-center">View Message</h2>
        <div class="message-content">
            <h4>Subject: @Model.title</h4>
            <p><strong>From:</strong> @Model.senderName</p>
            <p><strong>Date:</strong>@Model.DateTime</p>
            <p><strong>Service:</strong>@Model.serviceName</p>
            <hr>
            <p>@Model.message</p>
        </div>
        <a href="/Message/Index/@Model.serviceId" class="btn btn-danger mt-3">Reply</a>
        <a href="/Message/Inbox" class="btn btn-primary mt-3">Back to Messages</a>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-QZ5pnk9wPQpLLu2OwSHd+/z5JzOecF+OXkt9/DpZkX+7aXqUpHSjeAlq6fhd0U8G" crossorigin="anonymous"></script>
</body>
</html>

