@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Now</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .fs-4 {
            color: rgb(53, 105, 189);
            font-weight: bolder;
        }
        h3
        {
            font-family:  'Lato', sans-serif;
            font-style:italic;
        }
    </style>
</head>
<body style="background-color: #dae9f5;">
    <div class="container mt-5">
        <h2 class="mb-4"> Book a Service </h2>
        <form asp-controller="Booking" asp-action="Index" method="post" id="booking">
            <input type="hidden" id="id" name="id" value="@ViewBag.x" />
            <div class="mb-3 fs-4">
                <label for="taskDetails" class="form-label">Task Details</label>
                <textarea class="form-control" id="taskDetails" name="taskDetails" rows="4" placeholder="Explain the task you need done" required></textarea>
            </div>

            <div class="mb-3 fs-4">
                <label for="address" class="form-label">Address</label>
                <textarea class="form-control" id="address" name="address" rows="2" placeholder="Your Address" required></textarea>
            </div>
            <div class="mb-3 fs-4">
                <label for="pricing" class="form-label">Pricing</label>
                <input type="text" class="form-control" id="pricing" name="pricing" placeholder="Price" required>
            </div>

            <div class="mb-3 fs-4">
                <label for="serviceDate" class="form-label">Preferred Date</label>
                <input type="date" class="form-control" id="serviceDate" name="serviceDate" required>
            </div>
            <h3 class="text-danger">@ViewBag.DateError</h3>

            <div class="mb-3 fs-4">
                <label for="serviceTime" class="form-label">Preferred Time</label>
                <input type="time" class="form-control" id="serviceTime" name="serviceTime" required>
            </div>
            <div class="container mt-5">
                <div class="mb-3 p-2">
                    <h4 style="color:rgb(51, 115, 167);font-size:x-large;font-weight: bolder;">Terms and Conditions</h4>
                    <ul>
                        <li>All bookings are subject to availability.</li>
                        <li>Cancellation should be informed 24 hours in advance.</li>
                        <li>Payment is required after the completion of the service.</li>
                        <li>Services are limited to the mentioned details in the booking form.</li>
                    </ul>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="agreeTerms" name="agreeTerms" required>
                    <label class="form-check-label" for="agreeTerms">I agree to the terms and conditions.</label>
                </div>
            </div>

            <h3 class="text-danger">@ViewBag.Error</h3>
            <button type="submit"  id="book" class="btn btn-primary" >
                Confirm Booking
            </button>
            <h3 class="text-success">@ViewBag.Confirmation</h3>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
