@{
    Layout="_Layout1";
}
@{
    Layout = "_Layout1";
}
@model List<Service>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service Offerings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .bg-custom {
            background-color: #1c63a7;
        }

        .service-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease;
        }

            .service-card:hover {
                transform: translateY(-5px);
            }

        .card-img-top {
            height: 200px;
            object-fit: cover;
            border-radius: 10px 10px 0 0;
        }

        .card-title {
            font-weight: bold;
            font-size: 1.25rem;
        }

        .card-text {
            font-size: 0.9rem;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container py-5">
        <h1 class="text-center fw-bolder mb-5">Available Services sorted by price</h1>
        <div class="row g-4">
            @if (Model != null && Model.Any())
            {
                @foreach (var service in Model)
                {
                    <div class="col-md-4">
                        <div class="card service-card">
                            <img src="/@service.referenceImagePath" class="card-img-top" alt="@service.title">
                            <div class="card-body text-center">
                                <h5 class="card-title">@service.title</h5>
                                <p class="card-text">Provider: @service.provider</p>
                                <p class="card-text"><strong>Starting Price: $@service.pricing</strong></p>
                                <button class="btn btn-primary">
                                    <a href="/Services/ServiceDetails/@service.id" style="text-decoration: none; color: white;">Learn More</a>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <h4 class="text-danger">No Services</h4>
            }

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
