@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Service</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
          background-color: #dae9f5 ;
        }
        .card {
          border-radius: 10px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .form-label {
          font-weight: bolder;
          font-size: large;
          color: #0056b3;
        }
        .btn-custom {
          background-color: #0d6efd;
          color: #fff;
          border-radius: 20px;
          padding: 10px 20px;
        }
        .btn-custom:hover {
          background-color: #0056b3;
        }
    </style>
</head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Add New Service</a>
        </div>
    </nav>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4" style="color: #054c93; font-size:xx-large;">Add a New Service</h3>
                        <form method="post" asp-action="AddService" asp-controller="Services" enctype="multipart/form-data" id="serviceform">
                            <div class="mb-3">
                                <label for="serviceImage" class="form-label">Service Image</label>
                                <input type="file" class="form-control"  name ="serviceImage" id="serviceImage">
                            </div>
                            <div class="mb-3">
                                <label for="serviceTitle" class="form-label">Service Title</label>
                                <input type="text" class="form-control" name="title" id="serviceTitle" placeholder="Enter service title">
                            </div>
                            <div class="mb-3">
                                <label for="serviceProvider" class="form-label">Provider Name</label>
                                <input type="text" class="form-control" name="provider" id="serviceProvider" placeholder="Enter provider name">
                            </div>
                            <div class="mb-3">
                                <label for="serviceDescription" class="form-label">Service Description</label>
                                <textarea class="form-control" name="description" id="serviceDescription" rows="3" placeholder="Provide a detailed description"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="category" class="form-label">Category</label>
                                <select class="form-select" name="category" id="category" required>
                                    <option value="" disabled selected>Select a Category</option>
                                    <option value="Technology & IT Services">Technology & IT Services</option>
                                    <option value="Construction">Construction</option>
                                    <option value="Designing and Creativity">Designing and Creativity</option>
                                    <option value="Animation & Video Editing">Animation & Video Editing</option>
                                    <option value="Content Creation">Content Creation</option>
                                    <option value="Education & Training">Education & Training</option>
                                    <option value="Business & Administrative Services">Business & Administrative Services</option>
                                    <option value="Digital Marketing">Digital Marketing</option>
                                    <option value="Healthcare & Wellness">Healthcare & Wellness</option>
                                    <option value="Legal & Financial Services">Legal & Financial Services</option>
                                    <option value="Home & Lifestyle Services">Home & Lifestyle Services</option>
                                    <option value="Repair & Maintenance">Repair & Maintenance</option>
                                    <option value="Logistics & Delivery">Logistics & Delivery</option>
                                    <option value="Entertainment & Leisure">Entertainment & Leisure</option>
                                    <option value="Freelance & Gig Services">Freelance & Gig Services</option>


                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="serviceFeatures" class="form-label">Service Features</label>
                                <textarea class="form-control"  name ="features" id="serviceFeatures" rows="3" placeholder="List key features, separated by commas"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="servicePricing" class="form-label">Pricing</label>
                                <input type="number" class="form-control" name="price" id="servicePricing" placeholder="Enter price in your currency">
                            </div>
                    
                            <div class="text-center">
                                <button type="submit" class="btn btn-custom">Add Service</button>
                            </div>
                            <input type="button" id="b" style="display: none;">
                        </form>
                        <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

                      
                        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
       
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

