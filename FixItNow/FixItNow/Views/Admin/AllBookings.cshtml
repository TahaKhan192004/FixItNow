@{
    Layout = null;
}

@model List<Booking>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Bookings Timeline</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
        }

        .card-header {
            border-bottom: 2px solid #d1e7dd;
        }

        .timeline {
            list-style: none;
            padding: 0;
        }

        .timeline-item {
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 10px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .timeline-item:hover {
                transform: translateY(-5px);
                box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            }

            .timeline-item h4, .timeline-item h6 {
                margin: 0;
                font-weight: bold;
            }

            .timeline-item h4 {
                color: #198754;
            }

            .timeline-item h6 {
                color: #6c757d;
            }

            .timeline-item small {
                font-size: 0.9rem;
                color: #adb5bd;
            }

            .timeline-item p {
                margin-top: 10px;
                color: #495057;
            }

            .timeline-item i {
                color: #6c757d;
            }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Bookings Timeline</h4>
                </div>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="timeline">
                        @for (int i = 0; i < Math.Min(10, Model.Count()); i++)
                        {
                            <div class="timeline-item mb-4 p-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h4>ID: @Model[i].Id</h4>
                                    <small>Booked on: @Model[i].Time.ToString("MMMM dd, yyyy - HH:mm")</small>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <h6>Customer ID: @Model[i].customerId</h6>
                                    <h6>Provider ID: @Model[i].providerId</h6>
                                    <h6>Service ID: @Model[i].serviceId</h6>
                                    <h6>Pricing: @Model[i].pricing</h6>
                                </div>
                                <p class="text-secondary mt-2">
                                    <i>
                                        Limited Description:
                                        @Model[i].description.Substring(0, Math.Min(15, Model[i].description.Length))...
                                    </i>
                                </p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <h5 class="text-muted">No Data to Show</h5>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
