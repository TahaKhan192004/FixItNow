@{
    Layout = null;
}

@model List<User>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Users Timeline</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f4f8;
        }

        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
        }

        .card-header {
            background-color: #007bff;
            border-bottom: 2px solid #0056b3;
        }

            .card-header h4 {
                color: #ffffff;
            }

        .timeline {
            list-style: none;
            padding: 0;
        }

        .timeline-item {
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 10px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .timeline-item:hover {
                transform: translateY(-5px);
                box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            }

            .timeline-item h4 {
                color: #0056b3;
                margin-bottom: 0.5rem;
            }

            .timeline-item h6 {
                color: #343a40;
                font-weight: bold;
            }

            .timeline-item small {
                font-size: 0.9rem;
                color: #6c757d;
            }

            .timeline-item p {
                margin-top: 10px;
                color: #495057;
            }

            .timeline-item i {
                color: #6c757d;
            }

        .text-muted {
            color: #6c757d !important;
        }

        .no-data {
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="card shadow-sm">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Users Timeline</h4>
                </div>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="timeline">
                        @for (int i = 0; i < Math.Min(10, Model.Count()); i++)
                        {
                            <div class="timeline-item mb-4 p-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4>ID: @Model[i].id</h4>
                                    <small class="text-muted">
                                        Joined on @Model[i].joinedTime.ToString("MMMM dd, yyyy - HH:mm")
                                    </small>
                                </div>
                                <div>
                                    <h6>Name: @Model[i].firstName @Model[i].lastName</h6>
                                </div>
                                <p class="text-secondary mt-2">
                                    <i>Email: @Model[i].email</i>
                                </p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <h5 class="no-data">No Data to Show</h5>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
