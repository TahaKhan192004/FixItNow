@{
    Layout = null;
}
<div class="review-form-overlay">
    <div class="review-form-container">
        <h5 class="text-center mb-4">Submit Your Review</h5>
        <form method="post" action="/Review/Index">
            <div class="mb-3">
                <label class="form-label">Rating:</label>
                <div class="star-rating">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <input type="radio" id="star-@i" name="rating" value="@i") />
                        <label for="star-@i" title="@i star">@i stars</label>
                    }
                </div>
            </div>
            <div class="mb-3">
                <label for="serviceid" class="form-label">Comments:</label>
                <input id="serviceid" type="number" name="serviceid" class="form-control"  placeholder="serviceid" input>
            </div>
            <div class="mb-3">
                <label for="comments" class="form-label">Comments:</label>
                <textarea id="comments" name="comments" class="form-control" rows="4" placeholder="Write your comments here..."></textarea>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-secondary" onclick="closeReviewForm()">Cancel</button>
            </div>
        </form>
    </div>
</div>

<style>
    /* Overlay Styling */
    .review-form-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    /* Form Container Styling */
    .review-form-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.3s ease-in-out;
    }

    /* Star Rating Styling */
    .star-rating {
        display: flex;
        gap: 5px;
        justify-content: start;
        align-items: center;
    }

    .star-rating input {
        display: none;
    }

    .star-rating label {
        font-size: 24px;
        color: #ddd;
        cursor: pointer;
    }

    .star-rating input:checked ~ label,
    .star-rating label:hover,
    .star-rating label:hover ~ label {
        color: #ffc107;
    }
</style>

<script>
    // JavaScript to Close the Form
    function closeReviewForm() {
        document.querySelector('.review-form-overlay').style.display = 'none';
    }
</script>
