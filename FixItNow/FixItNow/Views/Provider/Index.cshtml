@{
    Layout = null;
}
@model FixItNow.Models.ViewModel.ProviderProfile
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Me</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #dae9f5;
            margin-top: 20px;
        }
        .gray-bg {
            background-color: #dae9f5;

        }
        .label
        {
            color:rgb(53, 105, 189);
            font-weight: bolder;
        }
        .about-text h3 {
            margin-bottom: 10px;
            color:rgb(53, 105, 189);
            font-weight: bolder;
        }
        .about-text h6 {
            font-weight: 600;
            margin-bottom: 15px;
        }
        .about-text p {
            font-size: 18px;
        }
        .about-text p mark {
            font-weight: 600;
            color: #20247b;
        }
        .about-list .label {
            color:rgb(53, 105, 189);
            font-weight: bolder;
            font-size: 20px;

        }
        .about-list p {
            margin: 0;
            font-size: 15px;
        }
        .count {
            font-weight: 700;
            color: #20247b;
        }
        .font-w-600 {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <section class="py-5 gray-bg" id="about">
        <div class="container">
            <div class="row align-items-center flex-lg-row-reverse">
                <div class="col-lg-6">
                    <div class="about-text">
                        <h3 class="text-dark">About Me</h3>
                        <h6 class="text-danger">@Model.provider.about_me</p>
                        <div class="row about-list">
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <span class="label">Name :</span>
                                    <p>@Model.provider.FirstName @Model.provider.LastName</p>
                                </div>
                                <div class="mb-2">
                                    <span class="label">Education</span>
                                    <p>@Model.provider.Education</p>
                                </div>
                                <div class="mb-2">
                                    <span class="label">Residence:</span>
                                    <p>@Model.provider.City</p>
                                </div>
                                <div class="mb-2">
                                    <span class="label">Skills</span>
                                    <p>@Model.provider.skill</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <span class="label">E-mail:</span>
                                    <p>@Model.provider.Email</p>
                                </div>
                                <div class="mb-2">
                                    <span class="label">Phone:</span>
                                    <p>@Model.provider.PhoneNumber</p>
                                </div>
                                <div class="mb-2">
                                    <span class="label">Experience:</span>
                                    <p>@Model.provider.expereince years</p>
                                </div>
                                <div class="mb-2">
                                    <span class="label">Status:</span>
                                    <p>@Model.provider.status</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 text-center">
                    <img src="@Model.provider.ProfilePicPath" class="img-fluid rounded-circle" alt="Avatar">
                </div>
            </div>
            <div class="row text-center mt-5">
                <div class="col-6 col-lg-3">
                    <div class="py-3 bg-white rounded shadow-sm">
                        <h6 class="count h2">@Model.clients</h6>
                        <p class="font-w-600 mb-0">Happy Clients</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="py-3 bg-white rounded shadow-sm">
                        <h6 class="count h2">@Model.projects</h6>
                        <p class="font-w-600 mb-0">Project Completed</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="py-3 bg-white rounded shadow-sm">
                        <h6 class="count h2">@Model.positiveReviews%</h6>
                        <p class="font-w-600 mb-0">Positive Reviews</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="py-3 bg-white rounded shadow-sm">
                        <h6 class="count h2">@Model.clientSatisfaction%</h6>
                        <p class="font-w-600 mb-0">Client Satisfaction</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
