
@page
@{
    Layout = null;
}
@model FixItNow.Areas.Identity.Pages.Account.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignIn</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .centered-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .bg-custom {
            background-color: #1c63a7;
        }

        .form-container {
            border: 2px solid #007bff;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body style="background-color: #dae9f5;">
    <nav class="navbar navbar-expand-lg navbar-light bg-custom">
        <div class="container">
            <a class="navbar-brand fw-bolder" href="#">FixItNow</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto fw-bold">
                    <li class="nav-item me-3"><a class="nav-link" href="home.html">Home</a></li>
                    <li class="nav-item ms-5 me-3"><a class="nav-link" href="aboutus.html">About Us</a></li>
                    <li class="nav-item ms-5 me-3"><a class="nav-link" href="contactus.html">Contact Us</a></li>
                    <li class="nav-item ms-5 me-3"><a class="nav-link" href="catalogue.html">Need A Service?</a></li>
                    <li class="nav-item ms-5 me-3"><a class="nav-link" href="#">FAQS</a></li>
                    <li class="nav-item "><a href="#" class=" fs-4 text-dark ms-5 me-3"><i class="fas fa-shopping-cart"></i></a></li>
                    <li class="nav-item "><a href="#" class=" fs-4 text-dark ms-1 me-1"><i class="fas fa-bell"></i></a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container centered-container">
        <form class="form-container" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <h4>Welcome To FixItNow</h4>

            <!-- Email -->
            <div class="row mb-3">
                <label for="inputEmail" class="col-sm-3 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputEmail" asp-for="Input.Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <!-- Password -->
            <div class="row mb-3">
                <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword" asp-for="Input.Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <!-- Remember Me -->
            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck1" name="RememberMe" asp-for="Input.RememberMe" />
                        <label class="form-check-label" for="gridCheck1">
                            Remember Me
                        </label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary" >
               @*  <a href="/Home/Index">
                    SignIn
                </a> *@
                SignIn

                
                    

            </button>
            <br>
            <h5 style="padding-top:15px; border-top: 2px solid blue; margin-top: 15px; margin-bottom: 15px;">Don't have an account?</h5>

            <a class="btn btn-outline-dark bg-dark ms-2 me-2 " style="color:white;text-decoration: none;" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
